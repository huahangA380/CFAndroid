<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/SnsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.crouniversity.roundimg.RoundImageView
                android:id="@+id/roundimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/banner" />

            <TextView
                android:id="@+id/layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1楼"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Danlis"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/font_green" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_clock"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_clock"
                    android:text="4.3"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.1"
                android:text="我记得书上写的是应该不可以吧，但是我的code blocks 的gcc编译能通过，有没有人来解释下初学者的困惑"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/font_black_content"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageSingle"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/imagesLayout0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image0"
                        android:layout_width="@dimen/image_square_width"
                        android:layout_height="@dimen/image_square_width"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/image_square_width"
                        android:layout_height="@dimen/image_square_width"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/image_square_width"
                        android:layout_height="@dimen/image_square_width"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imagesLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="@dimen/image_square_width"
                        android:layout_height="@dimen/image_square_width"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="@dimen/image_square_width"
                        android:layout_height="@dimen/image_square_width"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goodCommentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/photoType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/font_gray" />

                <TextView
                    android:id="@+id/SnsDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="@color/font_gray" />

                <CheckBox
                    android:id="@+id/goodck"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:button="@drawable/checkbox_good" />

                <CheckBox
                    android:id="@+id/commentck"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:button="@drawable/checkbox_comment" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/commentLikeArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/triangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/maopao_item_1"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/triangle"
                    android:layout_marginBottom="5dp"
                    android:background="@color/bg_maopao_comment"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/likesAllLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:id="@+id/likeUsersLayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp" >
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/maopao_comment_divide" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/commentArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp" >

                        <RelativeLayout
                            android:id="@+id/commentMore"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:visibility="gone" >

                            <ImageView
                                android:id="@+id/temp1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_maopao_all_comment" />

                            <TextView
                                android:id="@+id/commentMoreCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/temp1"
                                android:layout_toRightOf="@id/temp1"
                                android:text="查看全部24条评论"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commentLayout0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="12dp"
                            android:paddingBottom="5dp" >

                            <TextView
                                android:id="@+id/comment0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="6dp"
                                android:text=" 我来告诉你，不同的编译器要求不一样，少数编译器允许这样(gcc可以)，大部分为了安全不允许这样，对于不允许这样的编译器要实现这个功能，只能动态分配变量。"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/font_black_content"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/name0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/comment0"
                                android:text="天雨"
                                android:textColor="@color/font_black_comment"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/comment0"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@id/name0"
                                android:layout_toRightOf="@id/name0"
                                android:drawableLeft="@drawable/ic_clock"
                                android:drawablePadding="5dp"
                                android:drawableStart="@drawable/ic_clock"
                                android:text="21:58"
                                android:textColor="@color/font_gray"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commentLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="12dp"
                            android:paddingBottom="5dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/maopao_comment_divide" />

                            <TextView
                                android:id="@+id/comment1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="6dp"
                                android:text="确定是可以运行的嘛，没有警告什么特别的提示吗？"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/font_black_content"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/comment1"
                                android:text="圆圆 "
                                android:textColor="@color/font_black_comment"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/comment1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@id/name1"
                                android:layout_toRightOf="@id/name1"
                                android:drawableLeft="@drawable/ic_clock"
                                android:drawablePadding="5dp"
                                android:drawableStart="@drawable/ic_clock"
                                android:text="21:58"
                                android:textColor="@color/font_gray"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commentLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="12dp"
                            android:paddingBottom="5dp"
                            >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/maopao_comment_divide" />

                            <TextView
                                android:id="@+id/comment2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="6dp"
                                android:text="因为数组a[]里面不能是变量。"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/font_black_content"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/comment2"
                                android:text="玉儿 "
                                android:textColor="@color/font_black_comment"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/comment2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@id/name2"
                                android:layout_toRightOf="@id/name2"
                                android:drawableLeft="@drawable/ic_clock"
                                android:drawablePadding="5dp"
                                android:drawableStart="@drawable/ic_clock"
                                android:text="21:58"
                                android:textColor="@color/font_gray"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commentLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="12dp"
                            android:paddingBottom="5dp"
                            android:visibility="gone" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/maopao_comment_divide" />

                            <TextView
                                android:id="@+id/comment3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="6dp"
                                android:text="呵呵呵aa呵呵呵aa呵呵呵aa呵"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/font_black_content"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/comment3"
                                android:text="超级小胖纸"
                                android:textColor="@color/font_black_comment"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/comment3"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@id/name3"
                                android:layout_toRightOf="@id/name3"
                                android:drawableLeft="@drawable/ic_clock"
                                android:drawablePadding="5dp"
                                android:drawableStart="@drawable/ic_clock"
                                android:text="3分钟前"
                                android:textColor="@color/font_gray"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commentLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="12dp"
                            android:paddingBottom="5dp"
                            android:visibility="gone" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/maopao_comment_divide" />

                            <TextView
                                android:id="@+id/comment4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="6dp"
                                android:text="呵呵呵aa呵呵呵aa呵呵呵aa呵"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/font_black_content"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/name4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/comment4"
                                android:text="超级小胖纸"
                                android:textColor="@color/font_black_comment"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/comment4"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@id/name4"
                                android:layout_toRightOf="@id/name4"
                                android:drawableLeft="@drawable/ic_clock"
                                android:drawablePadding="5dp"
                                android:drawableStart="@drawable/ic_clock"
                                android:text="3分钟前"
                                android:textColor="@color/font_gray"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>